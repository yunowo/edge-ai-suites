#!/bin/sh
# preinst script
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
openvino_ver=$(dpkg-query --showformat='${Version}' --show openvino | cut -d'.' -f1-3)
echo "Intel openvino version $openvino_ver"
oneapi_ver=$(dpkg-query --showformat='${Version}' --show intel-oneapi-runtime-compilers-2024 | cut -d'.' -f1-3 | cut -d'-' -f1)
echo "Intel oneapi version $oneapi_ver"


case "$1" in
    install|upgrade)
	[ -d /opt/ros/jazzy/share/pyrealsense2-ai-demo/venv ] && rm -rf /opt/ros/jazzy/share/pyrealsense2-ai-demo/venv
	if command -v virtualenv > /dev/null; then
	    virtualenv -p python3 /opt/ros/jazzy/share/pyrealsense2-ai-demo/venv
	    # shellcheck disable=SC1091
	    . /opt/ros/jazzy/share/pyrealsense2-ai-demo/venv/bin/activate
	    pip install imutils || :
	    pip install onnx==1.13.0 || :
	    pip install numpy==1.23.0 || :
	    pip install protobuf==3.20.3 || :
	    pip install ultralytics==8.0.43 || :
	    pip install openvino-dev=="$openvino_ver" || :
	    pip install mkl=="$oneapi_ver" \
		onemkl-sycl-vm=="$oneapi_ver" \
		onemkl-sycl-stats=="$oneapi_ver" \
		onemkl-sycl-rng=="$oneapi_ver" \
		onemkl-sycl-dft=="$oneapi_ver" \
		onemkl-sycl-datafitting=="$oneapi_ver" \
		onemkl-sycl-blas=="$oneapi_ver" \
		onemkl-sycl-sparse=="$oneapi_ver" \
		onemkl-sycl-lapack=="$oneapi_ver" \
		mkl-dpcpp=="$oneapi_ver" \
		dpnp==0.13.0 \
		dpctl==0.15.0 || :
	    deactivate
	fi
        ;;

    abort-upgrade)
        ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
	exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
